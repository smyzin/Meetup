@import url('https://fonts.googleapis.com/css?family=Roboto+Slab:100,300,400|Roboto:100,300,400,500,700')

html, body
	width: 100%
	height: 100%

body
	font-family 'Roboto', 'Roboto Slab', 'Arial', sans-serif
	font-weight 300
	margin: 0

li
	list-style-type: none

.container
	display: block
	&__head
		display: block
		background: #4a454b
		margin: 0 auto
		position: relative
	&__timer
		display: block
		background: #4a454b
		margin: 0 auto
		position: relative
		padding: 120px 0 115px 0
	&__shot
		display: block
		background: #4a454b
		text-align: center
		position: relative
		overflow: hidden
		margin-bottom: 90px
	&__middle-block
		display: block
		background: white
		margin: 0 auto
		position: relative
	&__past-event
		display: block
		background: white
		margin: 0 auto
		position: relative


